{
  "hosting": {
    "public": "docs",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
          "source": "**",
          "destination": "/main.html",
          "type": 301
      },
      {
          "source": "/main.html",
          "destination": "/main.html",
          "type": 301
      },
      {
          "source": "**",
          "destination": "/404.html",
          "type": 404
      },
      {
        "source": "**",
        "destination": "/maintenance.html",
        "type": 503
    }
  ],
  "headers": [
    { "source":"/service-worker.js", "headers": [{"key": "Cache-Control", "value": "max-age=604800, must-revalidate"}] },
    { "source" : "**/*.@(eot|otf|ttf|ttc|woff|woff2|font.css)","headers" : [ {"key" : "Access-Control-Allow-Origin","value" : "*"} ]},
    { "source" : "**/*.@(js|css)","headers" : [ {"key" : "Cache-Control","value" : "max-age=604800, must-revalidate"} ]},
    { "source" : "**/*.@(jpg|jpeg|gif|png|webp|svg)","headers" : [ {"key" : "Cache-Control","value" : "max-age=604800"} ]},
    { "source" : "404.html","headers" : [ {"key" : "Cache-Control","value" : "max-age=300"} ]}
  ]
  }
}
