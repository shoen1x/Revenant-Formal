{
  "hosting": {
    "public": "docs",
    "ignore": ["firebase.json","**/.*","**/node_modules/**"],
    "redirects":[ 
      {
        "source": "/",
        "destination": "/home.html",
        "type": 301
      }
    ],
    "rewrites": [
      { 
          "source": "**",
          "destination": "/index.html"
      },
      {
          "source": "**",
          "destination": "/404.html",
          "type": 404
      }
  ],
  "cleanUrls": true,
  "headers": [
    { "source":"/service-worker.js", "headers": [{"key": "Cache-Control", "value": "no-cache"}] },
    { "source" : "**/*.@(eot|otf|ttf|ttc|woff|woff2|font.css)","headers" : [ {"key" : "Access-Control-Allow-Origin","value" : "max-age=604800, must-revalidate"} ]},
    { "source" : "**/*.@(js|css)","headers" : [ {"key" : "Cache-Control","value" : "max-age=604800, must-revalidate"} ]},
    { "source" : "**/*.@(jpg|jpeg|gif|png|webp|svg)","headers" : [ {"key" : "Cache-Control","value" : "max-age=604800, must-revalidate"} ]},
    { "source" : "404.html","headers" : [ {"key" : "Cache-Control","value" : "max-age=300"} ]}
  ]
  }
}
