{
  "hosting": {
    "public": "docs",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
          "source": "**",
          "destination": "/main.html",
          "type": 301
      },
      {
          "source": "/main.html",
          "destination": "/main.html",
          "type": 301
      },
      {
          "source": "**",
          "destination": "/404.html",
          "type": 404
      },
      {
        "source": "**",
        "destination": "/maintenance.html",
        "type": 503
    }
  ],
  "headers": [
    { "source":"/service-worker.js", "headers": [{"key": "Cache-Control", "value": "no-cache"}] }
  ]
  }
}
