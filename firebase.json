{
  "hosting": {
    "public": "docs",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
          "source": "**",
          "destination": "/maintenance.html",
          "type": 301
      },
      {
          "source": "/",
          "destination": "/maintenance.html",
          "type": 301
      },
      {
          "source": "**",
          "destination": "/404.html",
          "type": 404
      }
  ]
  }
}
